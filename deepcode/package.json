{
  "name": "deepcode-charm",
  "version": "0.0.4-alpha-05",
  "description": "The most powerful and flexible Discord bot framework with 50 essential primitive charms - Build anything you can imagine!",
  "main": "index.js",
  "bin": {
    "deepcode": "./cli/index.js"
  },
  "scripts": {
    "test": "jest",
    "docs": "node scripts/generate-docs.js",
    "prepublish": "node scripts/prepublish.js"
  },
  "keywords": [
    "discord",
    "bot",
    "framework",
    "charms",
    "discord.js",
    "primitives",
    "automation",
    "moderation",
    "economy",
    "interactive",
    "50-charms",
    "complete"
  ],
  "author": "DeepCode Team",
  "license": "MIT",
  "dependencies": {
    "discord.js": "^14.11.0",
    "commander": "^11.0.0",
    "inquirer": "^9.2.7",
    "chalk": "^4.1.2",
    "ora": "^7.0.1",
    "fs-extra": "^11.1.1"
  },
  "devDependencies": {
    "jest": "^29.5.0",
    "eslint": "^8.44.0",
    "prettier": "^3.0.0",
    "highlight.js": "^11.11.1",
    "jsdoc": "^4.0.2"
  },
  "engines": {
    "node": ">=16.9.0"
  },
  "files": [
    "charms/",
    "cli/",
    "core/",
    "docs/",
    "events/",
    "examples/",
    "parser/",
    "runtime/",
    "scripts/",
    "index.js",
    "LICENSE",
    "README.md"
  ],
  "cli": {
    "commands": {
      "init": {
        "description": "Initialize a new DeepCode bot project",
        "options": {
          "--typescript": "Use TypeScript template",
          "--plugin": "Add plugin support"
        }
      },
      "plugin": {
        "description": "Create a new plugin",
        "options": {
          "--name": "Plugin name",
          "--typescript": "Use TypeScript"
        }
      },
      "charm": {
        "description": "Create a new charm",
        "options": {
          "--name": "Charm name",
          "--tier": "Charm tier (1-3)"
        }
      },
      "docs": {
        "description": "Generate documentation",
        "options": {
          "--watch": "Watch for changes",
          "--serve": "Start documentation server"
        }
      }
    }
  }
}
